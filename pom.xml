				<!-- Reliable Peer Min Acks -->
				<onemfive.sensors.MinAckRP>100</onemfive.sensors.MinAckRP>
				<!-- Super Reliable Peer Min Acks -->
				<onemfive.sensors.MinAckSRP>100000</onemfive.sensors.MinAckSRP>
			</properties>
		</profile>
